generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  sessions      Session[]
  readings      Reading[]
}

model Session {
  id             Int       @id @default(autoincrement())
  userId         Int
  goalMinutes    Int
  startedAt      DateTime  @default(now())
  endedAt        DateTime?
  focusedSeconds Int       @default(0)
  awaySeconds    Int       @default(0)
  postureScore   Float?    // percentage of good posture

  user           User      @relation(fields: [userId], references: [id])
  readings       Reading[]
}

model Reading {
  id         Int       @id @default(autoincrement())
  userId     Int
  sessionId  Int?
  distance   Float
  timestamp  DateTime  @default(now())

  user       User      @relation(fields: [userId], references: [id])
  session    Session?  @relation(fields: [sessionId], references: [id])
}
