generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  sessions      Session[]
  readings      Reading[]
  settings      UserSettings?
}

model Session {
  id             Int       @id @default(autoincrement())
  userId         Int
  goalMinutes    Int
  startedAt      DateTime  @default(now())
  endedAt        DateTime?
  focusedPerc    Float?    
  awayPerc       Float?      
  postureScore   String?
  awayNotified   Boolean    @default(false)
  user           User      @relation(fields: [userId], references: [id])
  readings       Reading[]
}

model Reading {
  id         Int       @id @default(autoincrement())
  userId     Int
  sessionId  Int?
  distance   Float
  isTooClose Boolean?
  isNotSitting Boolean?
  timestamp  DateTime  @default(now())

  user       User      @relation(fields: [userId], references: [id])
  session    Session?  @relation(fields: [sessionId], references: [id])
}

model UserSettings {
  id           Int      @id @default(autoincrement())
  userId       Int      @unique
  isTooClose   Int      @default(10)
  isNotSitting Int      @default(80)
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
